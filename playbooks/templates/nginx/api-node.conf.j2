upstream api {
    server {{ api_address }};
}

server {
    listen              443 ssl http2;
    server_name         {{ api_subdomain }}.{{ domain }};
    keepalive_timeout   70;

    ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    #ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location ~ ^/(.*)$ {
        proxy_pass           http://api/$1;
    }

}

server {
    if ($host = {{ api_subdomain }}.{{ domain }}) {
        return 301 https://$host$request_uri;
    }

    listen              80;
    server_name         {{ api_subdomain }}.{{ domain }};
    return 404;
}

upstream rpc {
    server {{ prc_address }};
}

server {
    listen              443 ssl http2;
    server_name         {{ rpc_subdomain }}.{{ domain }};
    keepalive_timeout   70;

    ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    #ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass           http://rpc$request_uri;
	    proxy_set_header     Host $host;
    }

    location /websocket {
        proxy_pass http://rpc;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

}

server {
    if ($host = {{ rpc_subdomain }}.{{ domain }}) {
        return 301 https://$host$request_uri;
    }

    listen              80;
    server_name         {{ rpc_subdomain }}.{{ domain }};
    return 404;
}

upstream grpc {
    server {{ gprc_address }};
}

server {
    listen              {{ grpc_public_port }} ssl http2;

    ssl_certificate /etc/letsencrypt/live/{{ domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain }}/privkey.pem;

    location / {
	    grpc_pass grpc://grpc;
    }
}
